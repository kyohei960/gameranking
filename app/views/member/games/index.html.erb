<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
          <% @games.each do |game| %>
            <div class="card mb-6">
              <header class="card-header">
                <p class="card-header-image">
                  <%= image_tag game.get_image(70,70) %>
                </p>
                <p class="card-header-">
                  <%= game.title %>
                </p>
              </header>
            </div>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                    <div id="star<%= game.id %>"></div>
                  </div>
                  <div class="average-score-display ml-3 pt-2">
                    <%= game.avg_score %>点（<%= game.reviews.count %>件のレビュー）
                  </div>
                </div>
              </div>
            </div>
            <script>
              $('#star<%= game.id %>').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= game.reviews.average(:score).to_f.round(1) %>,
              });
            </script>
            <footer class="card-footer">
              <%= link_to game_reviews_path(game), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to game_path(game), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>
</section>
