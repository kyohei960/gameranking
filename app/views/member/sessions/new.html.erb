<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-11 col-md-8 col-lg-6 mx-auto">
      <div class="card mt-4 shadow">
        <div class="card-body text-secondary">
          <div class="card-title border-bottom mb-3"><h3>ログイン</h3></div>
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div>
              <br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
            </div>

            <div>
              <br>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div>
              <%= f.submit "サインイン", class: "btn btn-lg btn-primary" %>
            </div>
          <% end %>
          <!--<%= render "member/shared/links" %>-->
        </div>
      </div>
    </div>
  </div>
</div>
