<!DOCTYPE html>
<html>
  <head>
    <title>Gameranking</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/0b0011d8a0.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <p class="navbar-item">
          <%= link_to root_path do %>
            <strong class="is-size-3" style="font-family: cursive; color: black;">game ranking</strong>
          <% end %>
        </p>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
        <ul class="navbar-start">
          <% if admin_signed_in? %>
            <% if request.fullpath.include? "/admin" %>
              <li>
                <%= link_to "ゲーム一覧", admin_games_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'button' %>
              </li>
            <% else %>
              <li>
                <%= link_to "ゲーム一覧", admin_games_path %>
              </li>
              <li class="nav-item">
                <%= link_to "概要", about_path, class: 'button' %>
              </li>
            <% end %>
          <% elsif  user_signed_in? %>
            <div class="d-flex align-items-center text-white">ようこそ、<%= current_user.nickname %>さん!</div>
            <li>
              <%= link_to "ゲーム一覧", games_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'button' %>
            </li>
          <% else %>
            <li>
              <%= link_to "ゲーム一覧", games_path %>
            </li>
            <li class="nav-item">
              <%= link_to "概要", about_path, class: 'button' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
