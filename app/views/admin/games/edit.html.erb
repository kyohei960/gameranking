<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ゲーム編集</h2>
      <%= form_with model: @game, url: admin_game_path(@game.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="game_image">ゲーム画像</label>
          <%= f.file_field :image, accept: "image/*", class:"form-control-file game_image" %>
        </div>
        <div class="form-group">
          <label for="game_name">ゲーム名</label>
          <%= f.text_field :title, class:"form-control title" %>
        </div>
        <div class="form-group">
          <label for="game_description">ゲーム内容</label>
          <%= f.text_area :body, class:"form-control body" %>
        </div>
        <div class="form-group">
          <label for="game_tag">ゲームタグ</label>
          <%= f.text_field :tag_name, class:"form-control tag_name" %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>