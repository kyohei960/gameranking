<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= image_tag game.get_image, size:'70x70' %></td>
              <td><%= game.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>