<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @games.each do |game| %>
        <div class="col-md-4">
          <div class="card md-4 shadow-sm">
            <div class="card-img-top">
              <%= image_tag game.get_image(300,300) %>
            </div>
            <div class="card-review">
              <div id="star<%= game.id %>"></div>
            </div>
            <div class="card-title">
              <div class="card-tag">
                <% game.tags.each do |tag| %>
                  <%= link_to "##{tag.tag_name}", admin_games_path(tag), class: 'smaller tag-list' %>
                <% end %>
              </div>
              <p class="card-text"><%= game.title %></p>
              <div class="card-score"><%= game.avg_score %>点（<%= game.reviews.count %>件のレビュー）</div>
              <div class="d-flex justify-content-between align-games-center">
                <div class="btn-group">
                  <button type="button" class="button button-sm btn-outline-secondary">
                    <%= link_to 'レビューを見る', admin_game_reviews_path(game), class: "text-dark" %>
                  </button>
                  <button type="button" class="button button-sm btn-outline-secondary">
                    <%= link_to '詳細', admin_game_path(game), class: "text-dark" %>
                  </button>
                </div>
              </div>
            </div>
            <script>
              $('#star<%= game.id %>').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= game.reviews.average(:score).to_f.round(1) %>,
              });
            </script>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>