<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="game-title-name">ゲームソフト登録</h2>
      <%= form_with model: @game, url: admin_games_path, method: :post do |f| %>
        <div class="form-group">
          <label for="game_image">ゲーム画像</label>
          <%= f.file_field :image, accept: "image/*", class:"form-control-file game_image" %>
        </div>
        <div class="form-group">
          <label for="game_title">ゲーム名</label>
          <%= f.text_field :title, placeholder: "ゲームタイトルを入力", class:"form-control title" %>
        </div>
        <div class="form-group">
          <label for="game_body">ゲーム内容</label>
          <%= f.text_area :body, placeholder: "ゲームの内容を入力", class:"form-control body" %>
        </div>
        <div class="form-group">
          <label for="game_tag">タグ</label>
          <%= f.text_field :tag_name, placeholder: "ゲーム名に関連するタグをスペース区切りで５つまで入力", class:"form-control tag" %>
        </div>
        <div class="form-group">
          <label for="game_genre">genre</label>
          <select name="game[genre_id]">
            <% Genre.all.each do |g| %>
              <option value="<%= g.id %>"><%= g.name %></option>
            <% end %>
          </select>
        </div>
        <div class="game-edit-btn">
          <%= f.submit '登録' %>
        </div>
      <% end %>
    </div>
  </div>
</div>